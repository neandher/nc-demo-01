{% extends 'admin/base.html.twig' %}
{% block title %}{{ 'cleaningItem.actions.edit'|trans }}{% endblock %}

{% block page_content %}

    {% embed 'admin/_partials/_default_resource.html.twig' with {'route_index' : 'admin_cleaning_item_index'} %}

        {% block form_start %}
            {{ form_start(form, {'action': path('admin_cleaning_item_edit', {id : cleaningItem.id}) ~ pagination.buildQuery}) }}
        {% endblock %}

        {% block icon_list %}
            <span class="m-portlet__head-icon">
                <i class="flaticon-map"></i>
            </span>
        {% endblock %}

        {% block caption_subject %}
            <span class="caption-subject font-green-sharp bold uppercase">
                {{ 'cleaningItem.actions.edit'|trans }}
            </span>
        {% endblock %}

        {% block nav_tabs %}
            <li class="nav-item">
                <a href="#geral" class="nav-link active" data-toggle="tab">{{ 'resource.tabs.details'|trans }}</a>
            </li>
            <li class="nav-item">
                <a href="#options" class="nav-link" data-toggle="tab">{{ 'cleaningItem.tabs.options'|trans }}</a>
            </li>
            <li class="nav-item">
                <a href="#site" class="nav-link" data-toggle="tab">{{ 'cleaningItem.tabs.site'|trans }}</a>
            </li>
        {% endblock %}

        {% block tab_pane %}
            {% include 'admin/cleaningItem/_form.html.twig' with {'form': form} %}
        {% endblock %}

    {% endembed %}

{% endblock %}

{% block javascripts %}
    {% embed 'admin/_partials/_block_javascripts.html.twig' %}
        {% block javascripts_page_snippets %}
            <script src="{{ asset('assets/widgets/bootstrap-switch.js') }}"></script>
            <script src="{{ asset('assets/custom/cleaningItemOptions.js') }}"></script>
        {% endblock %}
    {% endembed %}
{% endblock %}