{% trans_default_domain 'FOSUserBundle' %}

<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2"
         id="m_login" style="background-image: url({{ asset('assets/media/img/bg-3.jpg') }});">
        <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
            <div class="m-login__container">

                <div class="m-login__forget-password" style="display: contents">
                    <div class="m-login__head">
                        <h3 class="m-login__title">
                            {{ 'user.resetting.request.title'|trans({}, 'messages') }}
                        </h3>
                        <div class="m-login__desc">
                            {{ 'user.resetting.request.subtitle'|trans({}, 'messages') }}:
                        </div>
                    </div>
                    <form class="m-login__form m-form" action="{{ path('fos_user_resetting_send_email') }}"
                          method="post">
                        {% include '_partials/_flash_messages.html.twig' %}
                        <div class="form-group m-form__group">
                            <input class="form-control m-input" type="text" id="username" name="username"
                                   required="required" autocomplete="off" placeholder="Username"/>
                        </div>
                        <div class="m-login__form-action">
                            <button type="submit" id=""
                                    class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">
                                {{ 'resetting.request.submit'|trans }}
                            </button>
                            <a href="{{ path('admin_index') }}" id=""
                               class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">
                                {{ 'resource.actions.items.cancel'|trans({}, 'messages') }}
                            </a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- end:: Page -->
{% block javascripts %}
    {% embed 'admin/_partials/_block_javascripts.html.twig' %}
        {% block javascripts_page_snippets %}
            <script src="{{ asset('assets/custom/pages/login.js') }}"></script>
        {% endblock %}
    {% endembed %}
{% endblock %}
</body>
<!-- end::Body -->
