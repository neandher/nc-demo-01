{% trans_default_domain 'FOSUserBundle' %}

<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2"
         id="m_login" style="background-image: url({{ asset('assets/media/img/bg-3.jpg') }});">
        <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
            <div class="m-login__container">

                <div class="m-login__head">
                    <h3 class="m-login__title">
                        {{ 'user.resetting.reset.title'|trans({}, 'messages') }}
                    </h3>
                </div>

                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}

                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset m-login__form m-form' } }) }}

                {% include '_partials/_flash_messages.html.twig' %}

                <div class="form-group m-form__group">
                    {{ form_widget(form.plainPassword.first, {
                        'attr': {
                            'class' : 'form-control m-input',
                            'placeholder': form.plainPassword.first.vars.label
                        }
                    }) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group m-form__group">
                    {{ form_widget(form.plainPassword.second, {
                        'attr': {
                            'class' : 'form-control m-input',
                            'placeholder': form.plainPassword.second.vars.label
                        }
                    }) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>
                <div class="m-login__form-action">
                    <button id=""
                            class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">
                        {{ 'resetting.reset.submit'|trans }}
                    </button>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>
<!-- end:: Page -->
</body>
<!-- end::Body -->
