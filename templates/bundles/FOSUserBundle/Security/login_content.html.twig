{% trans_default_domain 'FOSUserBundle' %}

<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2"
         id="m_login" style="background-image: url({{ asset('assets/media/img/bg-3.jpg') }});">
        <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
            <div class="m-login__container">
                {#<div class="m-login__logo">
                    <a href="#">
                        <img src="{{ asset('assets/media/img/logo.png') }}">
                    </a>
                </div>#}
                <div class="m-login__signin">
                    <div class="m-login__head">
                        <h3 class="m-login__title">
                            {{ 'user.login.title'|trans({}, 'messages') }}
                        </h3>
                    </div>
                    <form class="m-login__form m-form" action="{{ path("fos_user_security_check") }}" method="post">
                        {% include '_partials/_flash_messages.html.twig' %}
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        {% endif %}
                        <div class="form-group m-form__group">
                            <input class="form-control m-input" type="text" id="username" name="_username"
                                   value="{{ last_username }}" required="required" autocomplete="off"
                                   placeholder="{{ 'security.login.username'|trans }}"/>
                        </div>
                        <div class="form-group m-form__group">
                            <input class="form-control m-input m-login__form-input--last" type="password" id="password"
                                   name="_password" required="required" autocomplete="off"
                                   placeholder="{{ 'security.login.password'|trans }}"/>
                        </div>
                        <div class="row m-login__form-sub">
                            <div class="col m--align-left m-login__form-left">
                                <label class="m-checkbox  m-checkbox--focus">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                    {{ 'security.login.remember_me'|trans }}
                                    <span></span>
                                </label>
                            </div>
                            <div class="col m--align-right m-login__form-right">
                                <a href="{{ path('fos_user_resetting_request') }}" id="" class="m-link">
                                    {{ 'user.resetting.request.title'|trans({}, 'messages') }}
                                </a>
                            </div>
                        </div>
                        <div class="m-login__form-action">
                            <button type="submit" id="_submit" name="_submit"
                                    class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                                {{ 'security.login.submit'|trans }}
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- end:: Page -->
{% block javascripts %}
    {% embed 'admin/_partials/_block_javascripts.html.twig' %}
        {% block javascripts_page_snippets %}
            <script src="{{ asset('assets/custom/pages/login.js') }}"></script>
        {% endblock %}
    {% endembed %}
{% endblock %}
</body>
<!-- end::Body -->
